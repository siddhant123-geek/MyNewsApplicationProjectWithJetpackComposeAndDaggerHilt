<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.languages.LanguagesActivity"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/languagesPageHeading"
        android:text="@string/languages"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@color/material_on_background_emphasis_medium"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/languagesPageRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:flow_verticalAlign="top">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/languagesPageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/languagesPageHeading"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>